<div class="col-md-4 mx-auto">
    <div class="card card-body">
        <form action="/books/add" method="POST">
            <div class="form-group mb-3">
                <input class="form-control" type="text" name="title" placeholder="title book" autofocus required>
            </div>
            <div class="form-group mb-3">
                <input class="form-control" type="text" name="author" placeholder="author book" required>
            </div>
            <div class="form-group mb-3">
                <input class="form-control" type="text" name="isbn" placeholder="ISBN" required
                    pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])">
            </div>
            <div class="d-grid">
                <button class="btn btn-primary">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>